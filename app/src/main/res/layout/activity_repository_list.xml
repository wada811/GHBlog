<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<data>
    <variable
        name="viewModel"
        type="com.wada811.ghblog.viewmodel.RepositoryListViewModel"
        />
</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:items="@{viewModel.repositoryViewModelList.list}"
        app:onItemClick="@{viewModel.select.command}"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="@{viewModel.save.canExecute}"
        android:onClick="@{viewModel.save.command}"
        android:text="@string/save"
        />
</LinearLayout>
</layout>